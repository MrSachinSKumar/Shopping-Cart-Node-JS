<section>
<div class="container">
  <div class="row">
    <div class="col-md-6">
       <h1>Edit Product</h1>
      <form action="/admin/edit-product/{{product._id}}" method="post" enctype="multipart/form-data">

          <label for="">Name</label>
          <input type="text" class="form-control" name="name" value="{{product.name}}">
        
          <label for="">Category</label>
          <input type="text" class="form-control" name="category" value="{{product.category}}">
        
          <label for="">Price</label>
          <input type="text" class="form-control" name="price" value="{{product.price}}">
        
          <label for="">Description</label>
          <input type="text" class="form-control" name="description" value="{{product.description}}">

          <label for=""></label>
          <img src="/product-images/{{product._id}}.jpg" id="imageView" alt="" class="m-2" style="width:100px;height:auto">
          <input type="file" class="form-control" name="image" onchange="viewImage(event)">

        <button type="submit" class="btn btn-success mt-4">Update</button>
      </form>
    </div>
  </div>
</div>
</section>
<script>
  function viewImage(event)
  {
    document.getElementById('imageView').src=URL.createObjectURL(event.target.files[0])
  }
</script>

