<section>
    <div class="container">
        <h2>{{this._id.str}}</h2>
        <h2>{{this._id._str}}</h2>
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">Date</th>
                    <th>Name</th>
                    <th>Address</th>
                    <th>Pincode</th>
                    <th>Mobile</th>
                    <th>Area</th>
                    <th>Landmark</th>
                    <th>City</th>
                    <th>State</th>
                    <th scope="col">Amount</th>
                    <th scope="col">Payment</th>
                    <th>Payment Status</th>
                    <th>Dispatch Status</th>

                </tr>
            </thead>
            <tbody>
                {{#each orderDetails}}
                    <tr>
                        <td>{{this.date}}</td>
                        <td>{{this.deliveryDetails.name}}</td>
                        <td>{{this.deliveryDetails.address}}</td>
                        <td>{{this.deliveryDetails.mobile}}</td>
                        <td>{{this.deliveryDetails.pincode}}</td>
                        <td>{{this.deliveryDetails.area}}</td>
                        <td>{{this.deliveryDetails.landmark}}</td>
                        <td>{{this.deliveryDetails.city}}</td>
                        <td>{{this.deliveryDetails.state}}</td>
                        <td>{{this.total}}</td>
                        <td>{{this.paymentMethod}}</td>
                        <td>{{this.status}}</td>
                        <td>{{this.dispatch}}</td>
                        <td>
                            <a href="/view-order-products/{{this._id}}" class="btn btn-primary">View Products</a>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>